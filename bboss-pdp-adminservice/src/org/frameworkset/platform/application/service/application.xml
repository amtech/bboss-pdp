<properties>
	
	<property name="addApplication">
		<![CDATA[
			insert into auth_application (app_id,app_code,app_name,app_secret,app_secret_text,ticketlivetimes,certAlgorithm) values(#[appId],#[appCode],#[appName],#[appSecret],#[appSecretText],#[ticketlivetimes],#[certAlgorithm])
		]]>
	</property>
		<property name="deleteByKey">
		<![CDATA[
			delete from auth_application where app_id=?
		]]>
	</property>
		<property name="updateApplication">
		<![CDATA[
			update auth_application set app_id=#[appId],app_code=#[appCode],app_name=#[appName],app_secret=#[appSecret],app_secret_text=#[appSecretText],ticketlivetimes=#[ticketlivetimes],certAlgorithm=#[certAlgorithm] where app_id=#[appId]
		]]>
	</property>
	<property name="selectById">
		<![CDATA[
			select * from auth_application where app_id=?
		]]>
	</property>
	<property name="selectByAppcode">
		<![CDATA[
			select * from auth_application where app_code=?
		]]>
	</property>
	
		<property name="queryListApplication">
		<![CDATA[
			select * from auth_application where 1=1
			#if($appCode && !$appCode.equals(""))
				and app_code like #[appCode]		
			#end
								#if($appName && !$appName.equals(""))
				and app_name like #[appName]		
			#end
			
		]]>
	</property>
	</properties>